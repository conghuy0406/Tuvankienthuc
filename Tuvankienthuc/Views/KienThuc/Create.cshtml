@model Tuvankienthuc.Models.KienThuc

@{
    ViewData["Title"] = "Thêm Kiến Thức";
}

<div class="container pt-5 mt-3" style="max-width: 800px;">

    <div class="card border-0 shadow-sm rounded-4">

        <!-- HEADER -->
        <div class="card-header bg-primary text-white py-2 rounded-top-4">
            <strong>➕ @ViewData["Title"]</strong>
        </div>

        <!-- BODY -->
        <div class="card-body p-3">

            <form asp-action="Create" method="post">

                <!-- CHỦ ĐỀ -->
                <div class="mb-3">
                    <label asp-for="MaCD" class="form-label small fw-semibold">
                        📚 Chủ đề
                    </label>
                    <select asp-for="MaCD"
                            class="form-select form-select-sm"
                            asp-items="ViewBag.MaCD">
                    </select>
                </div>

                <!-- NỘI DUNG -->
                <div class="mb-3">
                    <label asp-for="NoiDung" class="form-label small fw-semibold">
                        🧠 Nội dung kiến thức
                    </label>
                    <textarea asp-for="NoiDung"
                              class="form-control form-control-sm"
                              rows="3"
                              placeholder="Nhập nội dung kiến thức"></textarea>
                    <span asp-validation-for="NoiDung" class="text-danger small"></span>
                </div>

                <!-- ĐỘ KHÓ -->
                <div class="mb-4">
                    <label asp-for="DoKho" class="form-label small fw-semibold">
                        ⚙️ Độ khó (1–10)
                    </label>
                    <input asp-for="DoKho"
                           type="number"
                           min="1"
                           max="10"
                           class="form-control form-control-sm"
                           placeholder="Ví dụ: 5" />
                    <span asp-validation-for="DoKho" class="text-danger small"></span>
                </div>

                <!-- ACTION -->
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index"
                       class="btn btn-outline-secondary btn-sm px-3">
                        ← Hủy
                    </a>

                    <button type="submit"
                            class="btn btn-primary btn-sm px-4">
                        💾 Lưu
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
