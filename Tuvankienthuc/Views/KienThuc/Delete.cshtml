@model Tuvankienthuc.Models.KienThuc

@{
    ViewData["Title"] = "Xóa Kiến Thức";
}

<h2>@ViewData["Title"]</h2>

<h3>Bạn có chắc chắn muốn xóa kiến thức này?</h3>
<div>
    <h4>Thông tin</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Chủ đề</dt>
        <dd class="col-sm-10">@Model.ChuDe?.TenCD</dd>

        <dt class="col-sm-2">Nội dung</dt>
        <dd class="col-sm-10">@Model.NoiDung</dd>

        <dt class="col-sm-2">Độ khó</dt>
        <dd class="col-sm-10">@Model.DoKho</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="MaKT" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
