@model Tuvankienthuc.Models.KienThuc

@{
    ViewData["Title"] = "Xóa Kiến Thức";
}

<div class="container pt-5 mt-3" style="max-width: 780px;">

    <div class="card border-0 shadow-sm rounded-4">

        <!-- HEADER -->
        <div class="card-header bg-danger text-white py-2 rounded-top-4">
            <strong>🗑️ @ViewData["Title"]</strong>
        </div>

        <!-- BODY -->
        <div class="card-body p-3">

            <div class="alert alert-warning py-2 small mb-3">
                ⚠️ Bạn có chắc chắn muốn <strong>xóa vĩnh viễn</strong> kiến thức này không?
            </div>

            <!-- THÔNG TIN -->
            <div class="row mb-2">
                <div class="col-sm-4 text-muted small fw-semibold">
                    📚 Chủ đề
                </div>
                <div class="col-sm-8 fw-semibold">
                    @Model.ChuDe?.TenCD
                </div>
            </div>

            <hr class="my-2" />

            <div class="row mb-2">
                <div class="col-sm-4 text-muted small fw-semibold">
                    🧠 Nội dung
                </div>
                <div class="col-sm-8">
                    @Model.NoiDung
                </div>
            </div>

            <hr class="my-2" />

            <div class="row mb-3">
                <div class="col-sm-4 text-muted small fw-semibold">
                    ⚙️ Độ khó
                </div>
                <div class="col-sm-8">
                    <span class="badge bg-secondary px-3 py-2">
                        @Model.DoKho / 10
                    </span>
                </div>
            </div>

            <!-- ACTION -->
            <form asp-action="DeleteConfirmed" method="post"
                  class="d-flex justify-content-end gap-2">
                <input type="hidden" asp-for="MaKT" />

                <a asp-action="Index"
                   class="btn btn-outline-secondary btn-sm px-3">
                    ← Hủy
                </a>

                <button type="submit"
                        class="btn btn-danger btn-sm px-4">
                    🗑️ Xóa
                </button>
            </form>

        </div>
    </div>
</div>
