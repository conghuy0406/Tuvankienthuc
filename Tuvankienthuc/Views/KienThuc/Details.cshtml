@model Tuvankienthuc.Models.KienThuc

@{
    ViewData["Title"] = "Chi tiết Kiến thức";
}

<div class="container pt-5 mt-3" style="max-width: 800px;">

    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-header bg-info text-white py-2 rounded-top-4">
            <strong>📘 @ViewData["Title"]</strong>
        </div>

        <div class="card-body p-3">

            <div class="row mb-2">
                <div class="col-sm-4 text-muted small fw-semibold">
                    📚 Chủ đề
                </div>
                <div class="col-sm-8 fw-semibold">
                    @Model.ChuDe?.TenCD
                </div>
            </div>

            <hr class="my-2" />

            <div class="row mb-2">
                <div class="col-sm-4 text-muted small fw-semibold">
                    🧠 Nội dung
                </div>
                <div class="col-sm-8">
                    @Model.NoiDung
                </div>
            </div>

            <hr class="my-2" />

            <div class="row mb-3">
                <div class="col-sm-4 text-muted small fw-semibold">
                    ⚙️ Độ khó
                </div>
                <div class="col-sm-8">
                    <span class="badge bg-secondary px-3 py-2">
                        @Model.DoKho / 10
                    </span>
                </div>
            </div>

            <!-- ACTION -->
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index"
                   class="btn btn-outline-secondary btn-sm px-3">
                    ← Quay lại
                </a>

                <a asp-action="Edit"
                   asp-route-id="@Model.MaKT"
                   class="btn btn-warning btn-sm px-4">
                    ✏️ Sửa
                </a>
            </div>

        </div>
    </div>

</div>
