@model Tuvankienthuc.Models.ChatLog

@{
    ViewData["Title"] = "Chi tiết Chat Log";
}

<div class="container pt-5 mt-3" style="max-width: 900px;">

    <div class="card border-0 shadow-sm rounded-4">

        <!-- HEADER -->
        <div class="card-header bg-info text-white py-2 rounded-top-4">
            <strong>@ViewData["Title"]</strong>
        </div>

        <!-- BODY -->
        <div class="card-body p-3">

            <div class="row mb-2">
                <div class="col-sm-4 text-muted small fw-semibold">
                    Sinh viên
                </div>
                <div class="col-sm-8 fw-semibold">
                    @Model.User?.HoTen
                </div>
            </div>

            <hr class="my-2" />

            <div class="row mb-2">
                <div class="col-sm-4 text-muted small fw-semibold">
                    Đề xuất liên quan
                </div>
                <div class="col-sm-8">
                    @Model.DeXuat?.NoiDung
                </div>
            </div>

            <hr class="my-2" />

            <div class="row mb-2">
                <div class="col-sm-4 text-muted small fw-semibold">
                    Câu hỏi
                </div>
                <div class="col-sm-8">
                    <div class="border rounded-3 p-2 bg-light">
                        @Model.NoiDung
                    </div>
                </div>
            </div>

            <hr class="my-2" />

            <div class="row mb-2">
                <div class="col-sm-4 text-muted small fw-semibold">
                    Trả lời AI
                </div>
                <div class="col-sm-8">
                    <div class="border rounded-3 p-2 bg-white">
                        @Model.TraLoi
                    </div>
                </div>
            </div>

            <hr class="my-2" />

            <div class="row mb-3">
                <div class="col-sm-4 text-muted small fw-semibold">
                    Thời gian
                </div>
                <div class="col-sm-8 small text-muted">
                    @Model.ThoiGian.ToString("dd/MM/yyyy HH:mm")
                </div>
            </div>

            <!-- ACTION -->
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index"
                   class="btn btn-outline-secondary btn-sm px-3">
                    Quay lại
                </a>

                <a asp-action="Edit"
                   asp-route-id="@Model.Id"
                   class="btn btn-warning btn-sm px-4">
                    Sửa
                </a>
            </div>

        </div>
    </div>
</div>
