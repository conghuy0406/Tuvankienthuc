@model Tuvankienthuc.Models.ChatLog

@{
    ViewData["Title"] = "Xóa Chat Log";
}

<div class="container pt-5 mt-3" style="max-width: 900px;">

    <div class="card border-0 shadow-sm rounded-4">

        <!-- HEADER -->
        <div class="card-header bg-danger text-white py-2 rounded-top-4">
            <strong>@ViewData["Title"]</strong>
        </div>

        <!-- BODY -->
        <div class="card-body p-3">

            <div class="alert alert-warning py-2 mb-3">
                Bạn có chắc chắn muốn xóa bản ghi chat này không?
                Hành động này <strong>không thể hoàn tác</strong>.
            </div>

            <div class="row mb-2">
                <div class="col-sm-4 text-muted small fw-semibold">
                    Sinh viên
                </div>
                <div class="col-sm-8 fw-semibold">
                    @Model.User?.HoTen
                </div>
            </div>

            <hr class="my-2" />

            <div class="row mb-2">
                <div class="col-sm-4 text-muted small fw-semibold">
                    Câu hỏi
                </div>
                <div class="col-sm-8">
                    <div class="border rounded-3 p-2 bg-light">
                        @Model.NoiDung
                    </div>
                </div>
            </div>

            <hr class="my-2" />

            <div class="row mb-3">
                <div class="col-sm-4 text-muted small fw-semibold">
                    Trả lời AI
                </div>
                <div class="col-sm-8">
                    <div class="border rounded-3 p-2 bg-white">
                        @Model.TraLoi
                    </div>
                </div>
            </div>

            <!-- ACTION -->
            <form asp-action="Delete" method="post" class="d-flex justify-content-end gap-2">
                <input type="hidden" asp-for="Id" />

                <a asp-action="Index"
                   class="btn btn-outline-secondary btn-sm px-3">
                    Hủy
                </a>

                <button type="submit"
                        class="btn btn-danger btn-sm px-4">
                    Xóa
                </button>
            </form>

        </div>
    </div>
</div>
