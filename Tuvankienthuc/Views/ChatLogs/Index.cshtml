@model IEnumerable<Tuvankienthuc.Models.ChatLog>

@{
    ViewData["Title"] = "Lịch sử Chat AI";
}

<div class="container pt-5 mt-3" style="max-width: 1200px;">

    <div class="card border-0 shadow-sm rounded-4">

        <!-- HEADER -->
        <div class="card-header bg-primary text-white py-2 rounded-top-4 d-flex justify-content-between align-items-center">
            <strong>@ViewData["Title"]</strong>
            <a asp-action="Create" class="btn btn-light btn-sm fw-semibold">
                Thêm bản ghi
            </a>
        </div>

        <!-- BODY -->
        <div class="card-body p-3">

            <table class="table table-hover align-middle mb-0">
                <thead class="table-light small text-muted">
                    <tr>
                        <th style="width:140px;">Thời gian</th>
                        <th style="width:160px;">Sinh viên</th>
                        <th>Đề xuất</th>
                        <th>Câu hỏi</th>
                        <th>Trả lời</th>
                        <th style="width:160px;" class="text-center">Thao tác</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="small text-muted">
                                @item.ThoiGian.ToString("dd/MM/yyyy HH:mm")
                            </td>

                            <td class="fw-semibold">
                                @item.User?.HoTen
                            </td>

                            <td class="text-truncate" style="max-width: 220px;">
                                @item.DeXuat?.NoiDung
                            </td>

                            <td class="text-truncate" style="max-width: 260px;">
                                @item.NoiDung
                            </td>

                            <td class="text-truncate" style="max-width: 260px;">
                                @item.TraLoi
                            </td>

                            <td class="text-center">
                                <div class="d-inline-flex gap-1">
                                    <a asp-action="Details"
                                       asp-route-id="@item.Id"
                                       class="btn btn-outline-info btn-sm">
                                        Chi tiết
                                    </a>

                                    <a asp-action="Edit"
                                       asp-route-id="@item.Id"
                                       class="btn btn-outline-warning btn-sm">
                                        Sửa
                                    </a>

                                    <a asp-action="Delete"
                                       asp-route-id="@item.Id"
                                       class="btn btn-outline-danger btn-sm">
                                        Xóa
                                    </a>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="text-center text-muted small py-4">
                    Chưa có dữ liệu lịch sử chat.
                </div>
            }

        </div>
    </div>
</div>
