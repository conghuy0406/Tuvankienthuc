@model Tuvankienthuc.Models.ChatLog

@{
    ViewData["Title"] = "Thêm Chat Log";
}

<h2>Thêm Chat Log</h2>

<form asp-action="Create" method="post" class="mt-3">
    <div class="form-group mb-3">
        <label>Sinh viên</label>
        <select asp-for="MaSV" class="form-control" asp-items="ViewBag.MaSV">
            <option value="">-- Chọn sinh viên --</option>
        </select>
        <span asp-validation-for="MaSV" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Đề xuất</label>
        <select asp-for="MaDX" class="form-control" asp-items="ViewBag.MaDX">
            <option value="">-- Chọn đề xuất (nếu có) --</option>
        </select>
    </div>

    <div class="form-group mb-3">
        <label>Câu hỏi (NoiDung)</label>
        <textarea asp-for="NoiDung" class="form-control" rows="3"></textarea>
        <span asp-validation-for="NoiDung" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Trả lời (TraLoi)</label>
        <textarea asp-for="TraLoi" class="form-control" rows="3"></textarea>
        <span asp-validation-for="TraLoi" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
