@model Tuvankienthuc.Models.ChatLog

@{
    ViewData["Title"] = "Thêm Chat Log";
}

<div class="container pt-5 mt-3" style="max-width: 900px;">

    <div class="card border-0 shadow-sm rounded-4">

        <!-- HEADER -->
        <div class="card-header bg-primary text-white py-2 rounded-top-4">
            <strong>@ViewData["Title"]</strong>
        </div>

        <!-- BODY -->
        <div class="card-body p-3">

            <form asp-action="Create" method="post">

                <div asp-validation-summary="ModelOnly"
                     class="alert alert-danger py-1 small mb-2"></div>

                <!-- SINH VIÊN -->
                <div class="mb-2">
                    <label class="form-label small fw-semibold">Sinh viên</label>
                    <select asp-for="MaSV"
                            class="form-select form-select-sm"
                            asp-items="ViewBag.MaSV">
                        <option value="">-- Chọn sinh viên --</option>
                    </select>
                    <span asp-validation-for="MaSV" class="text-danger small"></span>
                </div>

                <!-- ĐỀ XUẤT -->
                <div class="mb-2">
                    <label class="form-label small fw-semibold">Đề xuất (nếu có)</label>
                    <select asp-for="MaDX"
                            class="form-select form-select-sm"
                            asp-items="ViewBag.MaDX">
                        <option value="">-- Không gắn đề xuất --</option>
                    </select>
                </div>

                <!-- CÂU HỎI -->
                <div class="mb-2">
                    <label class="form-label small fw-semibold">Câu hỏi</label>
                    <textarea asp-for="NoiDung"
                              class="form-control form-control-sm"
                              rows="3"
                              placeholder="Nhập câu hỏi của sinh viên"></textarea>
                    <span asp-validation-for="NoiDung" class="text-danger small"></span>
                </div>

                <!-- TRẢ LỜI -->
                <div class="mb-3">
                    <label class="form-label small fw-semibold">Trả lời của AI</label>
                    <textarea asp-for="TraLoi"
                              class="form-control form-control-sm"
                              rows="3"
                              placeholder="Nhập câu trả lời của AI"></textarea>
                    <span asp-validation-for="TraLoi" class="text-danger small"></span>
                </div>

                <!-- ACTION -->
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index"
                       class="btn btn-outline-secondary btn-sm px-3">
                        Hủy
                    </a>

                    <button type="submit"
                            class="btn btn-primary btn-sm px-4">
                        Lưu
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
