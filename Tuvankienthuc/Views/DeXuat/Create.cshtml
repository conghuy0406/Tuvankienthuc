@model Tuvankienthuc.Models.DeXuat

@{
    ViewData["Title"] = "Thêm đề xuất";
}

<h2>Thêm đề xuất</h2>

<form asp-action="Create" method="post" class="mt-3">

    <!-- Sinh viên -->
    <div class="form-group mb-2">
        <label asp-for="MaSV" class="control-label">Sinh viên</label>
        <select asp-for="MaSV" class="form-control" asp-items="ViewBag.MaSV"></select>
        <span asp-validation-for="MaSV" class="text-danger"></span>
    </div>

    <!-- Môn học -->
    <div class="form-group mb-2">
        <label asp-for="MaMH" class="control-label">Môn học</label>
        <select asp-for="MaMH" class="form-control" asp-items="ViewBag.MaMH">
            <option value="">-- Chọn môn học --</option>
        </select>
        <span asp-validation-for="MaMH" class="text-danger"></span>
    </div>

    <!-- Nội dung đề xuất -->
    <div class="form-group mb-2">
        <label asp-for="NoiDung" class="control-label">Nội dung</label>
        <textarea asp-for="NoiDung" class="form-control" rows="3"></textarea>
        <span asp-validation-for="NoiDung" class="text-danger"></span>
    </div>

    <!-- Nguồn -->
    <div class="form-group mb-2">
        <label asp-for="Nguon" class="control-label">Nguồn</label>
        <input asp-for="Nguon" class="form-control" />
        <span asp-validation-for="Nguon" class="text-danger"></span>
    </div>

    <!-- Mục tiêu học tập -->
    <div class="form-group mb-3">
        <label asp-for="Goal" class="control-label">Mục tiêu học tập</label>
        <select asp-for="Goal" class="form-control">
            <option value="">-- Chọn mục tiêu --</option>
            <option value="Thi qua môn">Thi qua môn</option>
            <option value="Đạt điểm cao">Đạt điểm cao</option>
            <option value="Làm đồ án">Làm đồ án</option>
        </select>
        <span asp-validation-for="Goal" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
