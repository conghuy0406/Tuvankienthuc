@model Tuvankienthuc.Models.DeXuat

@{
    ViewData["Title"] = "Chi tiết đề xuất";
}

<div class="container pt-5 mt-3" style="max-width: 900px;">

    <div class="card border-0 shadow-sm rounded-4">

        <!-- HEADER -->
        <div class="card-header bg-info text-white py-2 rounded-top-4">
            <strong>📌 @ViewData["Title"]</strong>
        </div>

        <!-- BODY -->
        <div class="card-body p-3">

            <!-- MÃ + SINH VIÊN -->
            <div class="row mb-2">
                <div class="col-sm-4 text-muted small fw-semibold">🆔 Mã đề xuất</div>
                <div class="col-sm-8 fw-semibold">@Model.MaDX</div>
            </div>

            <hr class="my-2" />

            <div class="row mb-2">
                <div class="col-sm-4 text-muted small fw-semibold">👤 Sinh viên</div>
                <div class="col-sm-8">@Model.User?.HoTen</div>
            </div>

            <hr class="my-2" />

            <!-- NỘI DUNG -->
            <div class="row mb-2">
                <div class="col-sm-4 text-muted small fw-semibold">📝 Nội dung</div>
                <div class="col-sm-8">@Model.NoiDung</div>
            </div>

            <hr class="my-2" />

            <!-- NGUỒN -->
            <div class="row mb-2">
                <div class="col-sm-4 text-muted small fw-semibold">🔗 Nguồn</div>
                <div class="col-sm-8">
                    <span class="badge bg-secondary px-3 py-2">
                        @Model.Nguon
                    </span>
                </div>
            </div>

            <hr class="my-2" />

            <!-- THỜI GIAN -->
            <div class="row mb-3">
                <div class="col-sm-4 text-muted small fw-semibold">⏱ Thời gian</div>
                <div class="col-sm-8">
                    @Model.ThoiGian.ToString("dd/MM/yyyy HH:mm")
                </div>
            </div>

            <!-- ACTION -->
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index"
                   class="btn btn-outline-secondary btn-sm px-3">
                    ← Quay lại
                </a>

                <a asp-action="Edit"
                   asp-route-id="@Model.MaDX"
                   class="btn btn-warning btn-sm px-4">
                    ✏️ Sửa
                </a>
            </div>

        </div>
    </div>
</div>
