@model IEnumerable<Tuvankienthuc.Models.DeXuat>

@{
    ViewData["Title"] = "Danh sách đề xuất";
}

<div class="container pt-5 mt-3" style="max-width: 1100px;">

    <div class="card border-0 shadow-sm rounded-4">

        <!-- HEADER -->
        <div class="card-header bg-primary text-white py-2 rounded-top-4 d-flex justify-content-between align-items-center">
            <strong>📌 @ViewData["Title"]</strong>
            <a asp-action="Create"
               class="btn btn-light btn-sm fw-semibold rounded-pill px-3">
                + Thêm đề xuất
            </a>
        </div>

        <!-- BODY -->
        <div class="card-body p-3">

            <table class="table table-hover align-middle mb-0">
                <thead class="table-light small text-muted">
                    <tr>
                        <th style="width:70px;">Mã</th>
                        <th>Sinh viên</th>
                        <th>Nội dung</th>
                        <th>Nguồn</th>
                        <th style="width:160px;">Thời gian</th>
                        <th style="width:200px;" class="text-center">Thao tác</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@item.MaDX</td>

                            <td>@item.User?.HoTen</td>

                            <td class="text-truncate" style="max-width: 320px;">
                                @item.NoiDung
                            </td>

                            <td>
                                <span class="badge bg-secondary rounded-pill px-3">
                                    @item.Nguon
                                </span>
                            </td>

                            <td class="small text-muted">
                                @item.ThoiGian.ToString("dd/MM/yyyy HH:mm")
                            </td>

                            <!-- ACTION -->
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="Details"
                                       asp-route-id="@item.MaDX"
                                       class="btn btn-outline-info btn-sm">
                                        Chi tiết
                                    </a>

                                    <a asp-action="Edit"
                                       asp-route-id="@item.MaDX"
                                       class="btn btn-outline-warning btn-sm mx-1">
                                        Sửa
                                    </a>

                                    <a asp-action="Delete"
                                       asp-route-id="@item.MaDX"
                                       class="btn btn-outline-danger btn-sm">
                                        Xóa
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
