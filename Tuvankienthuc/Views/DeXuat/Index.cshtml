@model IEnumerable<Tuvankienthuc.Models.DeXuat>

@{
    ViewData["Title"] = "Danh sách đề xuất";
}

<h2 class="mb-3">Danh sách đề xuất</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Thêm đề xuất</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Mã DX</th>
            <th>Sinh viên</th>
            <th>Nội dung</th>
            <th>Nguồn</th>
            <th>Thời gian</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaDX</td>
                <td>@item.User?.HoTen</td>
                <td>@item.NoiDung</td>
                <td>@item.Nguon</td>
                <td>@item.ThoiGian.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MaDX" class="btn btn-info btn-sm">Chi tiết</a> |
                    <a asp-action="Edit" asp-route-id="@item.MaDX" class="btn btn-warning btn-sm">Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaDX" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
