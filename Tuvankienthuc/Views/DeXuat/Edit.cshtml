@model Tuvankienthuc.Models.DeXuat

@{
    ViewData["Title"] = "Sửa đề xuất";
}

<div class="container pt-5 mt-3" style="max-width: 900px;">

    <div class="card border-0 shadow-sm rounded-4">

        <!-- HEADER -->
        <div class="card-header bg-warning text-dark py-2 rounded-top-4">
            <strong>✏️ @ViewData["Title"]</strong>
        </div>

        <!-- BODY -->
        <div class="card-body p-3">

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="MaDX" />
                <input type="hidden" asp-for="MaSV" />

                <div asp-validation-summary="ModelOnly"
                     class="alert alert-danger py-1 small mb-2"></div>

                <!-- SINH VIÊN + MÔN HỌC -->
                <div class="row g-2 mb-2">
                    <div class="col-md-6">
                        <label class="form-label small fw-semibold">👤 Sinh viên</label>
                        <select asp-for="MaSV"
                                class="form-select form-select-sm"
                                asp-items="ViewBag.MaSV"
                                disabled>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label small fw-semibold">📘 Môn học</label>
                        <select asp-for="MaMH"
                                class="form-select form-select-sm"
                                asp-items="ViewBag.MaMH">
                            <option value="">-- Chọn môn học --</option>
                        </select>
                        <span asp-validation-for="MaMH" class="text-danger small"></span>
                    </div>
                </div>

                <!-- NỘI DUNG -->
                <div class="mb-2">
                    <label class="form-label small fw-semibold">📝 Nội dung đề xuất</label>
                    <textarea asp-for="NoiDung"
                              class="form-control form-control-sm"
                              rows="3"
                              placeholder="Nhập nội dung đề xuất..."></textarea>
                    <span asp-validation-for="NoiDung" class="text-danger small"></span>
                </div>

                <!-- NGUỒN + MỤC TIÊU -->
                <div class="row g-2 mb-2">
                    <div class="col-md-6">
                        <label class="form-label small fw-semibold">🔗 Nguồn</label>
                        <input asp-for="Nguon"
                               class="form-control form-control-sm"
                               placeholder="AI / Sinh viên / Giảng viên" />
                        <span asp-validation-for="Nguon" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label small fw-semibold">🎯 Mục tiêu học tập</label>
                        <select asp-for="Goal"
                                class="form-select form-select-sm">
                            <option value="">-- Chọn mục tiêu --</option>
                            <option value="Thi qua môn">Thi qua môn</option>
                            <option value="Đạt điểm cao">Đạt điểm cao</option>
                            <option value="Làm đồ án">Làm đồ án</option>
                        </select>
                        <span asp-validation-for="Goal" class="text-danger small"></span>
                    </div>
                </div>

                <!-- THỜI GIAN -->
                <div class="mb-3">
                    <label class="form-label small fw-semibold">⏱ Thời gian tạo</label>
                    <input asp-for="ThoiGian"
                           class="form-control form-control-sm"
                           readonly />
                </div>

                <!-- ACTION -->
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index"
                       class="btn btn-outline-secondary btn-sm px-3">
                        ← Quay lại
                    </a>

                    <button type="submit"
                            class="btn btn-warning btn-sm px-4 fw-semibold">
                        💾 Cập nhật
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
