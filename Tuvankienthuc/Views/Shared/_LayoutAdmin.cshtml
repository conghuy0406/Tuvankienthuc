<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="AdminDashboard" asp-action="Index">Trang quản trị</a>
            <div class="d-flex">
                <span class="navbar-text text-white me-3">
                    Xin chào, @Context.Session.GetString("UserName")
                </span>
                <a class="btn btn-outline-light btn-sm" asp-controller="AdminLogin" asp-action="Logout">Đăng xuất</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-dark text-white text-center p-2 mt-4">
        <p>© 2025 - Hệ thống tư vấn kiến thức</p>
    </footer>
</body>
</html>
