<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cổng Giảng Viên</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        body {
            overflow-x: hidden;
            background-color: #f0f2f5; /* Màu nền sáng nhẹ khác Admin chút */
        }

        #sidebar-wrapper {
            min-height: 100vh;
            margin-left: -16rem;
            transition: margin .25s ease-out;
            background-color: #0d6efd; /* Màu xanh chủ đạo cho Giảng viên (khác màu đen Admin) */
            background-image: linear-gradient(180deg, #0d6efd 10%, #0a58ca 100%);
        }

            #sidebar-wrapper .sidebar-heading {
                padding: 1rem 1.25rem;
                font-size: 1.2rem;
                color: white;
                border-bottom: 1px solid rgba(255,255,255,0.2);
            }

            #sidebar-wrapper .list-group {
                width: 16rem;
            }

        #page-content-wrapper {
            min-width: 100vw;
        }

        #wrapper.toggled #sidebar-wrapper {
            margin-left: 0;
        }
        /* Sidebar Link Styles */
        .list-group-item-action {
            background-color: transparent;
            color: rgba(255,255,255,0.8);
            border: none;
            font-weight: 500;
        }

            .list-group-item-action:hover {
                background-color: rgba(255,255,255,0.1);
                color: #fff;
            }

            .list-group-item-action.active {
                background-color: rgba(255,255,255,0.2);
                color: #fff;
                border-left: 4px solid #fff;
            }

    </style>
</head>
<body>
    <div class="d-flex" id="wrapper">
        <div class="border-end" id="sidebar-wrapper">
            <div class="sidebar-heading fw-bold">
                <i class="bi bi-mortarboard-fill me-2"></i> Giảng Viên Portal
            </div>
            <div class="list-group list-group-flush mt-3">
                <a asp-controller="GiangVien" asp-action="Index" class="list-group-item list-group-item-action p-3">
                    <i class="bi bi-grid-fill me-2"></i> Dashboard
                </a>

                <a asp-controller="GiangVien" asp-action="MonPhuTrach" class="list-group-item list-group-item-action p-3">
                    <i class="bi bi-book-half me-2"></i> Môn phụ trách
                </a>

                <a asp-controller="TuVan" asp-action="CauHoiMoi" class="list-group-item list-group-item-action p-3 d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-chat-dots-fill me-2"></i> Câu hỏi cần tư vấn</span>
                    <span class="badge bg-danger rounded-pill">3</span>
                </a>

                <a asp-controller="TaiLieu" asp-action="Index" class="list-group-item list-group-item-action p-3">
                    <i class="bi bi-folder2-open me-2"></i> Kho tài liệu
                </a>

                <a asp-controller="LichBieu" asp-action="Index" class="list-group-item list-group-item-action p-3">
                    <i class="bi bi-calendar-week me-2"></i> Lịch dạy / Tư vấn
                </a>
            </div>
        </div>

        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
                <div class="container-fluid">
                    <button class="btn btn-outline-primary border-0" id="sidebarToggle">
                        <i class="bi bi-list fs-4"></i>
                    </button>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0 align-items-center">
                            <li class="nav-item me-3">
                                <a class="nav-link position-relative text-secondary" href="#">
                                    <i class="bi bi-bell fs-5"></i>
                                    <span class="position-absolute top-10 start-100 translate-middle p-1 bg-danger border border-light rounded-circle"></span>
                                </a>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                    <img src="https://ui-avatars.com/api/?name=@Context.Session.GetString("UserName")&background=random" class="rounded-circle me-2" width="32" height="32" alt="Avatar">
                                    <span class="fw-bold text-dark">GV. @Context.Session.GetString("UserName")</span>
                                </a>
                                <div class="dropdown-menu dropdown-menu-end shadow border-0" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i> Hồ sơ giảng viên</a>
                                    <a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i> Cài đặt</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item text-danger"
                                       asp-controller="Auth" asp-action="Logout">
                                        <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                                    </a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="container-fluid p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        window.addEventListener('DOMContentLoaded', event => {
            const sidebarToggle = document.body.querySelector('#sidebarToggle');
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', event => {
                    event.preventDefault();
                    document.body.classList.toggle('sb-sidenav-toggled');
                    const wrapper = document.getElementById('wrapper');
                    wrapper.classList.toggle('toggled');
                });
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>