@{
    var title = ViewData["Title"] as string ?? "2PIG Learning";
    var userId = Context.Session.GetInt32("UserId");
    var userName = Context.Session.GetString("UserName");
    var role = Context.Session.GetString("Role");

    bool isLoggedIn = userId != null;
    var userInitial = !string.IsNullOrEmpty(userName)
        ? userName[0].ToString().ToUpper()
        : "?";

}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/bootstrap-icons.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/templatemo-topic-listing.css" rel="stylesheet" asp-append-version="true" />

    <style>
        :root {
            --primary: #0F766E;
            --primary-soft: #E6FFFA;
            --text-main: #0F172A;
            --text-muted: #475569;
            --bg-body: #F8FAFC;
            --glass-bg: rgba(255,255,255,0.9);
        }

        body {
            font-family: 'Montserrat', sans-serif;
            background: var(--bg-body);
            color: var(--text-main);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* ================= NAVBAR ================= */
        .navbar-custom {
            position: sticky; /* ✅ dán khi cuộn */
            top: 15px;
            z-index: 1050;
            width: 95%;
            max-width: 1200px;
            margin: 0 auto;
            background: var(--glass-bg);
            backdrop-filter: blur(10px);
            border-radius: 50px;
            padding: 10px 28px;
            box-shadow: 0 8px 24px rgba(0,0,0,0.08);
            transition: all .3s ease;
        }

            .navbar-custom.scrolled {
                padding: 6px 26px;
                box-shadow: 0 12px 32px rgba(0,0,0,0.12);
            }

        .navbar-brand {
            font-weight: 800;
            font-size: 1.5rem;
            color: var(--primary) !important;
        }

        .navbar-nav .nav-link {
            font-weight: 600;
            color: var(--text-main) !important;
            padding: 8px 18px !important;
            border-radius: 25px;
        }

            .navbar-nav .nav-link:hover,
            .navbar-nav .nav-link.active {
                background: var(--primary-soft);
                color: var(--primary) !important;
            }

        /* ================= AUTH BUTTON ================= */
        .btn-login {
            border: 2px solid var(--primary);
            color: var(--primary) !important;
            font-weight: 600;
            border-radius: 999px;
            padding: 6px 18px;
        }

        .btn-register {
            background: var(--primary);
            color: white !important;
            font-weight: 600;
            border-radius: 999px;
            padding: 6px 18px;
            margin-left: 8px;
        }

        .user-avatar {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            background: var(--primary);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
        }

        /* ================= MAIN ================= */
        main {

            flex: 1;
        }

        /* ================= FOOTER ================= */
        footer {
            background: #ffffff;
            border-top: 1px solid #e5e7eb;
            padding: 24px 0;
            color: var(--text-muted);
            font-size: 14px;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>

<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container-fluid px-0">

            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <i class="bi bi-journal-bookmark-fill me-2"></i> 2PIG
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">

                <ul class="navbar-nav mx-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="TuVan" asp-action="Index">Tư vấn học tập</a>
                    </li>

                    @if (role == "GiangVien")
                    {
                        <li class="nav-item">
                            <a class="nav-link text-warning" asp-controller="GiangVien" asp-action="Index">
                                Giảng viên
                            </a>
                        </li>
                    }

                    @if (role == "Admin")
                    {
                        <li class="nav-item">
                            <a class="nav-link text-danger" asp-controller="Admin" asp-action="Index">
                                Quản trị
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-warning" asp-controller="GiangVien" asp-action="Index">
                                Giảng viên
                            </a>
                        </li>
                    }
                </ul>

                <div class="d-flex align-items-center mt-3 mt-lg-0">
                    @if (!isLoggedIn)
                    {
                        <a class="btn-login text-decoration-none" asp-controller="Auth" asp-action="Login">
                            Đăng nhập
                        </a>
                        <a class="btn-register text-decoration-none" asp-controller="Auth" asp-action="Register">
                            Đăng ký
                        </a>
                    }
                    else
                    {
                        <div class="dropdown">
                            <div class="d-flex align-items-center gap-2"
                                 role="button"
                                 data-bs-toggle="dropdown">
                                <span class="fw-semibold d-none d-md-inline">@userName</span>
                                <div class="user-avatar">@userInitial</div>
                            </div>

                            <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0 mt-2">
                                <li class="dropdown-header">Xin chào, @userName</li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item text-danger"
                                       asp-controller="Auth" asp-action="Logout">
                                        <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }
                </div>

            </div>
        </div>
    </nav>

    <!-- MAIN -->
    <main>
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer>
        <div class="container text-center">
            © 2025 <strong>2PIG Learning System</strong>. All rights reserved.
        </div>
    </footer>

    <!-- JS -->
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script>
        window.addEventListener("scroll", function () {
            const nav = document.querySelector(".navbar-custom");
            if (window.scrollY > 60) nav.classList.add("scrolled");
            else nav.classList.remove("scrolled");
        });
    </script>

    @RenderSection("Scripts", required: false)

</body>
</html>
