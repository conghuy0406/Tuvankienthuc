@model IEnumerable<Tuvankienthuc.Models.MonHoc>

@{
    ViewData["Title"] = "Danh sách môn học";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    body {
        background-color: #f8fafc;
        font-family: 'Inter', sans-serif;
        color: #1e293b;
    }

    .container-fluid {
        max-width: 1200px;
        padding: 40px 20px;
    }

    /* Header Styling */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title h2 {
        font-weight: 700;
        margin: 0;
        color: #0f172a;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    /* Button Styling */
    .btn-add {
        background: #4f46e5;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 10px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .btn-add:hover {
            background: #4338ca;
            color: white;
            box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3);
            transform: translateY(-2px);
        }

    /* Table Card */
    .table-container {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 25px rgba(0, 0, 0, 0.05);
        border: 1px solid #e2e8f0;
        overflow: hidden;
    }

    .custom-table {
        width: 100%;
        margin-bottom: 0;
        border-collapse: collapse;
    }

        .custom-table thead {
            background: #f1f5f9;
        }

        .custom-table th {
            padding: 16px 24px;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            color: #64748b;
            letter-spacing: 0.05em;
            border-bottom: 1px solid #e2e8f0;
        }

        .custom-table td {
            padding: 18px 24px;
            vertical-align: middle;
            border-bottom: 1px solid #f1f5f9;
            font-size: 14.5px;
        }

        .custom-table tbody tr:hover {
            background-color: #f8fafc;
        }

    /* Badges & Text */
    .code-badge {
        background: #eff6ff;
        color: #2563eb;
        padding: 4px 10px;
        border-radius: 6px;
        font-family: 'Courier New', Courier, monospace;
        font-weight: 700;
        font-size: 13px;
    }

    .subject-name {
        font-weight: 600;
        color: #0f172a;
    }

    .subject-desc {
        color: #64748b;
        max-width: 400px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Action Buttons */
    .action-group {
        display: flex;
        gap: 8px;
    }

    .btn-action {
        width: 34px;
        height: 34px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        transition: all 0.2s ease;
        text-decoration: none;
    }

    .btn-edit {
        background: #fefce8;
        color: #a16207;
    }

    .btn-details {
        background: #eff6ff;
        color: #2563eb;
    }

    .btn-delete {
        background: #fef2f2;
        color: #dc2626;
    }

    .btn-action:hover {
        transform: scale(1.1);
        filter: brightness(0.95);
    }
</style>

<div class="container-fluid">
    <div class="page-header">
        <div class="page-title">
            <h2><i class="bi bi-book-half" style="color: #4f46e5;"></i> Quản lý môn học</h2>
        </div>
        <a asp-action="Create" class="btn-add">
            <i class="bi bi-plus-lg"></i> Thêm môn học mới
        </a>
    </div>

    <div class="table-container">
        <div class="table-responsive">
            <table class="custom-table">
                <thead>
                    <tr>
                        <th style="width: 15%;">Mã MH</th>
                        <th style="width: 30%;">Tên môn học</th>
                        <th style="width: 35%;">Mô tả nội dung</th>
                        <th style="width: 20%;" class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <span class="code-badge">@item.MaMH</span>
                            </td>
                            <td>
                                <span class="subject-name">@item.TenMH</span>
                            </td>
                            <td>
                                <div class="subject-desc" title="@item.MoTa">
                                    @(string.IsNullOrEmpty(item.MoTa) ? "Chưa có mô tả..." : item.MoTa)
                                </div>
                            </td>
                            <td>
                                <div class="action-group justify-content-center">
                                    <button type="button"
                                            class="btn-action btn-assign"
                                            data-bs-toggle="modal"
                                            data-bs-target="#assignModal"
                                            data-id="@item.MaMH"
                                            data-name="@item.TenMH"
                                            data-gvid="@item.GiangVienId"
                                            title="Gán Giảng Viên">
                                        <i class="bi bi-person-plus-fill"></i>
                                    </button>

                                    <a asp-action="Edit" asp-route-id="@item.MaMH" class="btn-action btn-edit" title="Sửa">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.MaMH" class="btn-action btn-details" title="Chi tiết">
                                        <i class="bi bi-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MaMH" class="btn-action btn-delete" title="Xóa">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="modal fade" id="assignModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-white border-bottom-0 pb-0">
                <h5 class="modal-title fw-bold text-primary">
                    <i class="bi bi-person-video3 me-2"></i>Phân công giảng dạy
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form asp-action="GanGiangVien" method="post">
                <div class="modal-body pt-4">
                    <input type="hidden" name="id" id="monHocIdInput" />

                    <div class="mb-3">
                        <label class="form-label text-secondary small fw-bold text-uppercase">Môn học đang chọn</label>
                        <input type="text" class="form-control bg-light" id="monHocNameDisplay" readonly fw-bold">
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-secondary small fw-bold text-uppercase">Chọn Giảng Viên</label>
                        <select name="giangVienId" class="form-select form-select-lg border-primary"
                                asp-items="ViewBag.GiangVienList">
                            <option value="">-- Chọn giảng viên --</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer border-top-0">
                    <button type="button" class="btn btn-light fw-bold" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary fw-bold px-4">Lưu thay đổi</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var assignModal = document.getElementById('assignModal');
        assignModal.addEventListener('show.bs.modal', function (event) {
            // Nút kích hoạt modal
            var button = event.relatedTarget;

            // Lấy dữ liệu từ data attributes của nút
            var id = button.getAttribute('data-id');
            var name = button.getAttribute('data-name');
            var currentGv = button.getAttribute('data-gvid');

            // Cập nhật giá trị vào trong Modal
            var modalIdInput = assignModal.querySelector('#monHocIdInput');
            var modalNameDisplay = assignModal.querySelector('#monHocNameDisplay');
            var modalSelect = assignModal.querySelector('select[name="giangVienId"]');

            modalIdInput.value = id;
            modalNameDisplay.value = name;

            // Nếu môn học đã có GV, tự động chọn GV đó trong list
            if(currentGv) {
                modalSelect.value = currentGv;
            } else {
                modalSelect.value = "";
            }
        });
    });
</script>

