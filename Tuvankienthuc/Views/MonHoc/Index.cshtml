@model IEnumerable<Tuvankienthuc.Models.MonHoc>

@{
    ViewData["Title"] = "Danh sách môn học";
}

<div class="container pt-5 mt-3" style="max-width:1100px;">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold text-primary mb-0">📘 Danh sách môn học</h4>
        <a asp-action="Create" class="btn btn-primary btn-sm px-3">
            + Thêm môn học
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body p-0">

            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width:90px;">Mã MH</th>
                        <th style="width:220px;">Tên môn học</th>
                        <th>Mô tả</th>
                        <th style="width:200px;" class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@item.MaMH</td>
                            <td>@item.TenMH</td>
                            <td class="text-muted small">
                                @(string.IsNullOrWhiteSpace(item.MoTa)
                                                            ? "—"
                                                            : item.MoTa.Length > 120
                                                            ? item.MoTa.Substring(0, 120) + "..."
                                                            : item.MoTa)
                        </td>
                        <td class="text-center">
                            <a asp-action="Details"
                               asp-route-id="@item.MaMH"
                               class="btn btn-outline-info btn-sm me-1">
                                Chi tiết
                            </a>
                            <a asp-action="Edit"
                               asp-route-id="@item.MaMH"
                               class="btn btn-outline-warning btn-sm me-1">
                                Sửa
                            </a>
                            <a asp-action="Delete"
                               asp-route-id="@item.MaMH"
                               class="btn btn-outline-danger btn-sm">
                                Xoá
                            </a>
                        </td>
                    </tr>
                                        }
                </tbody>
            </table>

        </div>
    </div>

</div>
