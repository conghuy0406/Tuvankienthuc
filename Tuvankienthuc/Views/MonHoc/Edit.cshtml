@model Tuvankienthuc.Models.MonHoc

@{
    ViewData["Title"] = "Sửa môn học";
}

<div class="container pt-5 mt-3" style="max-width:800px;">

    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-header bg-primary text-white py-2 rounded-top-4">
            <strong>✏️ Sửa môn học</strong>
        </div>

        <div class="card-body p-4">

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="MaMH" />

                <!-- TÊN MÔN HỌC -->
                <div class="mb-3">
                    <label asp-for="TenMH" class="form-label fw-semibold small">
                        Tên môn học
                    </label>
                    <input asp-for="TenMH"
                           class="form-control form-control-sm"
                           placeholder="Nhập tên môn học" />
                    <span asp-validation-for="TenMH" class="text-danger small"></span>
                </div>

                <!-- MÔ TẢ -->
                <div class="mb-4">
                    <label asp-for="MoTa" class="form-label fw-semibold small">
                        Mô tả
                    </label>
                    <textarea asp-for="MoTa"
                              class="form-control form-control-sm"
                              rows="3"
                              placeholder="Mô tả ngắn về môn học"></textarea>
                    <span asp-validation-for="MoTa" class="text-danger small"></span>
                </div>

                <!-- ACTION -->
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index"
                       class="btn btn-outline-secondary btn-sm px-3">
                        ← Quay lại
                    </a>

                    <button type="submit"
                            class="btn btn-primary btn-sm px-4">
                        💾 Cập nhật
                    </button>
                </div>
            </form>

        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
