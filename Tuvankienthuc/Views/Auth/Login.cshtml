@{
    ViewData["Title"] = "Đăng nhập";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <style>
        /* Định nghĩa màu cục bộ để đảm bảo đúng tông xanh như hình */
        :root {
            --teal-primary: #0f766e; /* Màu xanh đậm của nút */
            --teal-hover: #115e59; /* Màu khi di chuột vào */
            --teal-light: #f0fdfa; /* Nền nhạt */
            --teal-accent: #ccfbf1; /* Điểm nhấn nền */
        }

        /* Nền trang đăng nhập */
        .login-section {
            min-height: 85vh; /* Tăng độ cao để căn giữa đẹp hơn trên màn hình lớn */
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, var(--teal-light) 0%, var(--teal-accent) 100%);
        }

        /* Card đăng nhập */
        .login-card {
            border: none;
            border-radius: 25px;
            box-shadow: 0 20px 50px rgba(15, 118, 110, 0.15); /* Bóng đổ mềm và sâu hơn */
            background: white;
            transition: transform 0.3s ease;
        }

        /* Input styles */
        .form-control-custom {
            background-color: #f8fafc;
            border: 2px solid transparent; /* Viền trong suốt mặc định */
            border-radius: 50px;
            padding: 12px 20px;
            padding-left: 50px; /* Chừa chỗ rộng rãi cho icon */
            font-size: 0.95rem;
            transition: all 0.3s ease;
            color: #334155;
        }

            .form-control-custom:focus {
                background-color: #fff;
                border-color: var(--teal-primary); /* Viền xanh khi focus */
                box-shadow: 0 0 0 4px rgba(15, 118, 110, 0.1);
                outline: none;
            }

        /* Icon bên trong input */
        .input-icon {
            position: absolute;
            left: 20px;
            top: 50%;
            transform: translateY(-50%); /* Căn giữa chiều dọc tuyệt đối */
            color: #94a3b8;
            font-size: 1.2rem;
            z-index: 10;
            transition: color 0.3s;
        }

        /* Khi focus vào input thì icon cũng sáng lên */
        .form-group:focus-within .input-icon {
            color: var(--teal-primary);
        }

        /* Nút đăng nhập */
        .btn-login {
            background-color: var(--teal-primary);
            color: #ffffff !important; /* Quan trọng: Ép chữ luôn màu trắng */
            border: none;
            border-radius: 50px;
            padding: 14px;
            font-weight: 800; /* Tăng độ đậm của chữ lên một chút */
            font-size: 1.1rem; /* Chữ to hơn một chút */
            letter-spacing: 1px;
            text-transform: uppercase;
            transition: all 0.3s ease;
            box-shadow: 0 10px 20px rgba(15, 118, 110, 0.2);
            /* Tạo bóng nhẹ cho chữ để chữ nổi lên khỏi nền */
            text-shadow: 0px 1px 2px rgba(0, 0, 0, 0.2);
        }

            .btn-login:hover {
                background-color: var(--teal-hover);
                color: #ffffff !important; /* Giữ nguyên màu trắng khi di chuột */
                transform: translateY(-3px);
                box-shadow: 0 15px 25px rgba(15, 118, 110, 0.4);
            }

            .btn-login:active {
                transform: translateY(-1px);
                box-shadow: 0 5px 10px rgba(15, 118, 110, 0.3);
            }

        .link-register {
            color: var(--teal-primary);
            font-weight: 700;
            text-decoration: none;
            transition: color 0.2s;
        }

            .link-register:hover {
                color: var(--teal-hover);
                text-decoration: underline;
            }

        /* Custom label */
        .custom-label {
            font-size: 0.85rem;
            font-weight: 600;
            color: #64748b;
            margin-bottom: 0.5rem;
            margin-left: 1rem;
            display: block;
        }
    </style>
}

<div class="login-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-5 col-xl-4">

                <div class="login-card p-4 p-md-5">
                    <div class="text-center mb-4">
                        <div class="mb-3" style="color: var(--teal-primary); font-size: 3.5rem;">
                            <i class="bi bi-person-circle"></i>
                        </div>
                        <h3 class="fw-bold text-dark mb-1">Chào mừng trở lại!</h3>
                        <p class="text-muted small">Đăng nhập để tiếp tục lộ trình học tập</p>
                    </div>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger border-0 rounded-4 d-flex align-items-center mb-4 shadow-sm" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <div>@ViewBag.Error</div>
                        </div>
                    }

                    <form method="post" asp-action="Login">

                        <div class="form-group mb-3 position-relative">
                            <label class="custom-label">Email</label>
                            <div class="position-relative">
                                <i class="bi bi-envelope input-icon"></i>
                                <input type="email" name="email" class="form-control form-control-custom"
                                       placeholder="example@gmail.com" required />
                            </div>
                        </div>

                        <div class="form-group mb-4 position-relative">
                            <label class="custom-label">Mật khẩu</label>
                            <div class="position-relative">
                                <i class="bi bi-lock input-icon"></i>
                                <input type="password" name="password" class="form-control form-control-custom"
                                       placeholder="••••••••" required />
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 btn-login text-white mb-4">
                            ĐĂNG NHẬP
                        </button>

                        <div class="text-center">
                            <p class="text-muted mb-0">
                                Chưa có tài khoản?
                                <a asp-action="Register" class="link-register">Đăng ký ngay</a>
                            </p>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>