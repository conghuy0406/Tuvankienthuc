    Layout = null;
}


</div>
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập</title>

    <style>
        /* Nền gradient giống mẫu Colorlib */
        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(to bottom, #89D2C5, #845ec2);
            font-family: "Poppins", Arial, sans-serif;
        }

        /* Card trắng ở giữa */
        .login-wrapper {
            width: 360px;
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.25);
            padding: 35px 30px 30px;
            box-sizing: border-box;
            text-align: center;
        }

        .login-title {
            font-size: 20px;
            font-weight: 700;
            letter-spacing: 2px;
            margin-bottom: 25px;
        }

        .login-form {
            text-align: left;
        }

        /* Ô input xám giống mẫu */
        .login-input {
            width: 100%;
            padding: 11px 12px;
            border-radius: 4px;
            border: none;
            background: #f2f2f2;
            margin-bottom: 15px;
            font-size: 14px;
            box-sizing: border-box;
        }

            .login-input:focus {
                outline: none;
                box-shadow: 0 0 0 2px #ff5f6d33;
            }

        label {
            font-size: 13px;
            color: #555;
            margin-bottom: 4px;
            display: block;
        }

        /* Nút hồng */
        .login-btn {
            width: 100%;
            padding: 11px;
            border-radius: 4px;
            border: none;
            background: #89D2C5;
            color: #fff;
            font-weight: 600;
            font-size: 14px;
            cursor: pointer;
            margin-top: 5px;
        }

            .login-btn:hover {
                background: #89D2C5;
            }

        .register-text {
            margin-top: 18px;
            font-size: 13px;
            text-align: center;
            color: #555;
        }

            .register-text a {
                color: #89D2C5;
                text-decoration: none;
            }

                .register-text a:hover {
                    text-decoration: underline;
                }

        /* Alert lỗi cho gọn lại */
        .error-box {
            background: #ffe3e6;
            border-radius: 4px;
            padding: 8px 10px;
            font-size: 13px;
            color: #0A718E;
            margin-bottom: 12px;
        }
    </style>

</head>
<body>

    <div class="login-wrapper">
        <div class="login-title">LOGIN</div>

        @if (ViewBag.Error != null)
        {
            <div class="error-box">@ViewBag.Error</div>
        }

        <form asp-action="Login" method="post" class="login-form">
            <div class="mb-2">
                <label>Email</label>
                <input type="email" name="email" class="login-input" placeholder="Email" required />
            </div>

            <div class="mb-2">
                <label>Password</label>
                <input type="password" name="password" class="login-input" placeholder="Password" required />
            </div>

            <button type="submit" class="login-btn">Đăng nhập</button>
        </form>

        <p class="register-text">
            Chưa có tài khoản?
            <a asp-action="Register">Đăng ký ngay</a>
        </p>
    </div>

</body>
</html>
