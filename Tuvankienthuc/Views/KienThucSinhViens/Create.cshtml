@model Tuvankienthuc.Models.KienThucSinhVien

@{
    ViewData["Title"] = "Thêm kiến thức sinh viên";
}

<div class="container pt-5 mt-3" style="max-width:700px;">

    <div class="card border-0 shadow-sm rounded-4">

        <div class="card-header bg-success text-white py-2 rounded-top-4">
            <strong>➕ Thêm kiến thức sinh viên</strong>
        </div>

        <div class="card-body p-3">

            <form asp-action="Create" method="post">

                <div asp-validation-summary="ModelOnly"
                     class="alert alert-danger py-1 small mb-2"></div>

                <!-- SINH VIÊN -->
                <div class="mb-2">
                    <label class="form-label small fw-semibold">👤 Sinh viên</label>
                    <select asp-for="MaSV"
                            class="form-select form-select-sm"
                            asp-items="ViewBag.MaSV">
                        <option value="">-- Chọn sinh viên --</option>
                    </select>
                    <span asp-validation-for="MaSV" class="text-danger small"></span>
                </div>

                <!-- KIẾN THỨC -->
                <div class="mb-2">
                    <label class="form-label small fw-semibold">📚 Kiến thức</label>
                    <select asp-for="MaKT"
                            class="form-select form-select-sm"
                            asp-items="ViewBag.MaKT">
                        <option value="">-- Chọn kiến thức --</option>
                    </select>
                    <span asp-validation-for="MaKT" class="text-danger small"></span>
                </div>

                <!-- TRẠNG THÁI -->
                <div class="mb-2">
                    <label class="form-label small fw-semibold">📊 Trạng thái</label>
                    <select asp-for="TrangThai"
                            class="form-select form-select-sm">
                        <option value="0">Chưa nắm vững</option>
                        <option value="1">Hiểu cơ bản</option>
                        <option value="2">Đã nắm vững</option>
                    </select>
                    <span asp-validation-for="TrangThai" class="text-danger small"></span>
                </div>

                <!-- LẦN HỌC CUỐI -->
                <div class="mb-3">
                    <label class="form-label small fw-semibold">⏱ Lần học gần nhất</label>
                    <input asp-for="LanHocCuoi"
                           class="form-control form-control-sm"
                           readonly
                           value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" />
                </div>

                <!-- ACTION -->
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index"
                       class="btn btn-outline-secondary btn-sm px-3">
                        ← Quay lại
                    </a>

                    <button type="submit"
                            class="btn btn-success btn-sm px-4">
                        💾 Lưu
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
