@model Tuvankienthuc.Models.KienThucSinhVien

@{
    ViewData["Title"] = "Chỉnh sửa Kiến thức sinh viên";
}

<h2>Chỉnh sửa Kiến thức sinh viên</h2>

<form asp-action="Edit" method="post" class="mt-3">
    <!-- Ẩn khóa chính -->
    <input type="hidden" asp-for="MaSV" />
    <input type="hidden" asp-for="MaKT" />

    <!-- Sinh viên -->
    <div class="form-group mb-3">
        <label asp-for="MaSV" class="control-label">Sinh viên</label>
        <select asp-for="MaSV" class="form-control" asp-items="ViewBag.MaSV" disabled>
            <option value="">-- Chọn sinh viên --</option>
        </select>
        <input type="hidden" asp-for="MaSV" />
    </div>

    <!-- Kiến thức -->
    <div class="form-group mb-3">
        <label asp-for="MaKT" class="control-label">Kiến thức</label>
        <select asp-for="MaKT" class="form-control" asp-items="ViewBag.MaKT" disabled>
            <option value="">-- Chọn kiến thức --</option>
        </select>
        <input type="hidden" asp-for="MaKT" />
    </div>

    <!-- Trạng thái -->
    <div class="form-group mb-3">
        <label asp-for="TrangThai" class="control-label">Trạng thái</label>
        <select asp-for="TrangThai" class="form-control">
            <option value="0">Chưa nắm vững</option>
            <option value="1">Hiểu cơ bản</option>
            <option value="2">Đã nắm vững</option>
        </select>
        <span asp-validation-for="TrangThai" class="text-danger"></span>
    </div>

    <!-- Lần học gần nhất -->
    <div class="form-group mb-3">
        <label asp-for="LanHocCuoi" class="control-label">Lần học gần nhất</label>
        <input asp-for="LanHocCuoi" class="form-control" readonly
               value="@Model.LanHocCuoi?.ToString("yyyy-MM-dd HH:mm:ss")" />
        <span asp-validation-for="LanHocCuoi" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
