@model Tuvankienthuc.Models.KienThucSinhVien

@{
    ViewData["Title"] = "Chi tiết kiến thức sinh viên";
}

<div class="container pt-5 mt-3" style="max-width:700px;">

    <div class="card border-0 shadow-sm rounded-4">

        <div class="card-header bg-info text-white py-2 rounded-top-4">
            <strong>📘 Chi tiết kiến thức sinh viên</strong>
        </div>

        <div class="card-body p-3">

            <dl class="row mb-0 small">
                <dt class="col-4 text-muted">👤 Sinh viên</dt>
                <dd class="col-8 fw-semibold">
                    @Model.user?.HoTen
                </dd>

                <dt class="col-4 text-muted">📚 Kiến thức</dt>
                <dd class="col-8">
                    @Model.KienThuc?.NoiDung
                </dd>

                <dt class="col-4 text-muted">📊 Trạng thái</dt>
                <dd class="col-8">
                    @if (Model.TrangThai == 2)
                    {
                        <span class="badge bg-success">Đã nắm vững</span>
                    }
                    else if (Model.TrangThai == 1)
                    {
                        <span class="badge bg-warning text-dark">Hiểu cơ bản</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Chưa nắm vững</span>
                    }
                </dd>

                <dt class="col-4 text-muted">⏱ Lần học gần nhất</dt>
                <dd class="col-8">
                    @(Model.LanHocCuoi?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa có dữ liệu")
                </dd>
            </dl>

        </div>

        <div class="card-footer bg-light d-flex justify-content-end gap-2 py-2">
            <a asp-action="Index"
               class="btn btn-outline-secondary btn-sm px-3">
                ← Quay lại
            </a>

            <a asp-action="Edit"
               asp-route-MaSV="@Model.MaSV"
               asp-route-MaKT="@Model.MaKT"
               class="btn btn-warning btn-sm px-3">
                ✏️ Sửa
            </a>
        </div>

    </div>
</div>
