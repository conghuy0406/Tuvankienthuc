@using Newtonsoft.Json.Linq
@model List<(Tuvankienthuc.Models.KienThuc kt, float score)>

@{
    ViewData["Title"] = "Kết quả tư vấn học tập";

    string monHoc = ViewBag.MonHoc ?? "";
    string goal = ViewBag.Goal ?? "";
    int daysLeft = ViewBag.DaysLeft ?? 7;

    string studyPlan = ViewBag.StudyPlan ?? "";
    string timelineJson = ViewBag.TimelineJson ?? "[]";

    var goiYBoSung =
        ViewBag.GoiYBoSung as Dictionary<int, string>
        ?? new Dictionary<int, string>();

    JArray timeline = JArray.Parse(timelineJson);
}

<div class="container my-4">

    <h2 class="fw-bold text-primary mb-2">
        📘 Tư vấn học tập – @monHoc
    </h2>

    <p class="text-muted mb-4">
        🎯 Mục tiêu: <strong>@goal</strong> |
        ⏱ Còn <strong>@daysLeft ngày</strong>
    </p>

    <!-- STUDY PLAN -->
    <div class="card shadow mb-4">
        <div class="card-header bg-primary text-white fw-bold">
            📝 Chiến lược ôn tập
        </div>
        <div class="card-body">
            @Html.Raw(studyPlan.Replace("\n", "<br/>"))
        </div>
    </div>

    <!-- TIMELINE -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-secondary text-white fw-bold">
            📅 Timeline học tập
        </div>
        <div class="card-body">

            @foreach (var day in timeline)
            {
                <h5 class="fw-bold text-primary mt-3">
                    Ngày @day["day"]
                </h5>

                <ul class="list-group mb-3">
                    @foreach (var it in day["items"]!)
                    {
                        <li class="list-group-item d-flex justify-content-between">
                            <span>📘 @it["noiDung"]</span>
                            <span class="badge bg-info text-dark">
                                @it["minutes"] phút
                            </span>
                        </li>
                    }
                </ul>
            }

        </div>
    </div>

    <!-- KIẾN THỨC -->
    <h4 class="fw-bold text-secondary mt-4">
        📌 Kiến thức cần bổ sung
    </h4>

    @foreach (var item in Model)
    {
        var kt = item.kt;
        var score = item.score;

        <div class="card shadow-sm mb-3">
            <div class="card-body">

                <div class="d-flex justify-content-between">
                    <strong>@kt.NoiDung</strong>
                    <span class="badge bg-primary">
                        @score.ToString("0.00")
                    </span>
                </div>

                <div class="text-muted small mb-2">
                    Chủ đề: @kt.ChuDe?.TenCD
                </div>

                @if (goiYBoSung.ContainsKey(kt.MaKT))
                {
                    <div class="alert alert-info mb-0">
                        🧠 <strong>Gợi ý ôn tập:</strong><br />
                        @Html.Raw(goiYBoSung[kt.MaKT].Replace("\n", "<br/>"))
                    </div>
                }
            </div>
        </div>
    }
</div>
