@using Tuvankienthuc.Services
@model IEnumerable<KienThucTuDanhGiaVm>

<style>
    body {
        background: linear-gradient(180deg, #EAFBF7, #F4F7FF);
        font-size: 14px;
    }

    /* ===== TIÊU ĐỀ ===== */
    .page-title {
        font-weight: 800;
        font-size: 22px;
        background: linear-gradient(90deg,#2563EB,#7C3AED);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* ===== CHỦ ĐỀ ===== */
    .topic-card {
        border-radius: 12px;
        overflow: hidden;
        margin-bottom: 16px;
    }

    .topic-header {
        background: linear-gradient(90deg,#2563EB,#7C3AED);
        color: #fff;
        padding: 10px 14px;
        font-size: 15px;
        font-weight: 600;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    /* ===== KIẾN THỨC – GỌN 1 DÒNG ===== */
    .kt-item {
        background: #fff;
        border-radius: 10px;
        padding: 10px 12px;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,.04);
        transition: .2s;
    }

        .kt-item:hover {
            transform: translateY(-1px);
            box-shadow: 0 6px 16px rgba(0,0,0,.08);
        }

    .kt-content {
        flex: 1;
        min-width: 0;
    }

    .kt-title {
        font-weight: 600;
        margin-bottom: 2px;
    }

    .kt-question {
        font-size: 13px;
        color: #2563EB;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* ===== BADGE TRẠNG THÁI ===== */
    .status-badge {
        font-size: 11px;
        padding: 4px 10px;
        white-space: nowrap;
        border-radius: 999px;
    }

    .badge.bg-success {
        background-color: #10B981 !important;
    }

    /* ===== FORM TƯ VẤN ===== */
    .goal-box {
        background: #fff;
        border-radius: 14px;
        padding: 16px;
        box-shadow: 0 8px 24px rgba(0,0,0,.08);
    }

    .btn-primary {
        background: linear-gradient(90deg,#2563EB,#7C3AED);
        border: none;
        font-weight: 600;
    }

        .btn-primary:hover {
            opacity: .9;
        }
</style>

@{
    ViewData["Title"] = "Tự đánh giá kiến thức";
    var groups = Model.GroupBy(m => m.KienThuc.ChuDe?.TenCD ?? "Chủ đề khác")
                      .OrderBy(g => g.Key);
}

<div class="container my-3 pt-5" style="margin-top:70px; max-width:1000px;">

    <h2 class="page-title mb-1">@ViewBag.TenMonHoc</h2>
    <p class="text-muted mb-3">
        Tick nhanh kiến thức đã hiểu → AI tư vấn lộ trình phù hợp.
    </p>

    @foreach (var group in groups)
    {
        <div class="card topic-card border-0 shadow-sm">

            <div class="topic-header">
                <span>@group.Key</span>
                <small>@group.Count() kiến thức</small>
            </div>

            <div class="card-body p-2 bg-light">

                @foreach (var item in group)
                {
                    var kt = item.KienThuc;

                    <div class="kt-item">
                        <input type="checkbox"
                               class="form-check-input js-kienthuc-toggle"
                               data-id="@kt.MaKT"
                               @(item.TrangThai == 2 ? "checked" : "") />

                        <div class="kt-content">
                            <div class="kt-title">@kt.NoiDung</div>
                            <div class="kt-question">@kt.CauHoiAI</div>
                        </div>

                        <span class="badge status-badge js-status-badge @(item.TrangThai == 2 ? "bg-success" : "bg-secondary")">
                            @(item.TrangThai == 2 ? "Đã hiểu" : "Chưa hiểu")
                        </span>
                    </div>
                }

            </div>
        </div>
    }

    <!-- FORM TƯ VẤN -->
    <div class="goal-box mt-4">
        <form id="formTuVan" method="post"
              action="@Url.Action("TuVanKetQua","TuVan")"
              class="row g-2 align-items-end">

            <input type="hidden" name="maMH" value="@ViewBag.MaMH" />

            <div class="col-md-5">
                <label class="fw-semibold">🎯 Mục tiêu</label>
                <select name="goal" class="form-select" required>
                    <option value="">-- Chọn --</option>
                    <option>Thi qua môn</option>
                    <option>Đạt điểm cao</option>
                    <option>Hiểu sâu</option>
                </select>
            </div>

            <div class="col-md-4">
                <label class="fw-semibold">⏱ Số ngày</label>
                <input type="number" name="daysLeft" class="form-control" value="7" min="1" />
            </div>

            <div class="col-md-3 d-grid">
                <button class="btn btn-primary">
                    🚀 Tư vấn
                </button>
            </div>
        </form>
    </div>

</div>
