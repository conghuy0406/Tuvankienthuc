@model IEnumerable<Tuvankienthuc.Services.KienThucTuDanhGiaVm>

@{
    ViewData["Title"] = "Tự đánh giá kiến thức";
    int maMH = ViewBag.MaMH;
    string tenMonHoc = ViewBag.TenMonHoc;

    var groups = Model.GroupBy(m => m.KienThuc.ChuDe?.TenCD ?? "Khác");
}

<div class="container my-4">

    <h2 class="fw-bold text-primary">@tenMonHoc – Tự đánh giá</h2>
    <p class="text-muted mb-4">Tick vào các kiến thức bạn đã nắm rõ.</p>

    @foreach (var g in groups)
    {
        <div class="card shadow-sm border-0 mb-3">
            <div class="card-header bg-primary text-white fw-bold">
                @g.Key
            </div>

            <div class="card-body bg-light">
                @foreach (var item in g)
                {
                    var kt = item.KienThuc;

                    <div class="p-3 bg-white rounded shadow-sm mb-3">
                        <div class="d-flex justify-content-between">
                            <div class="">
                                <div class="fw-semibold">@kt.NoiDung</div>
                                <div class="small text-muted">Câu hỏi: @kt.CauHoiAI</div>
                            </div>

                            <input type="checkbox"
                                   class="form-check-input js-kt-toggle"
                                   data-id="@kt.MaKT"
                                   @(item.TrangThai == 2 ? "checked" : "") />
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- FORM SUBMIT -->
    <form method="post" asp-action="TuVanRedirect" class="mt-4">

        <input type="hidden" name="maMH" value="@maMH" />

        <label class="fw-bold">🎯 Mục tiêu học tập</label>
        <select name="goal" class="form-select mb-3" required>
            <option value="">-- Chọn mục tiêu --</option>
            <option>Thi qua môn</option>
            <option>Đạt điểm cao</option>
            <option>Hiểu sâu kiến thức</option>
            <option>Làm bài tập lớn</option>
        </select>

        <label class="fw-bold">⏱ Số ngày còn lại</label>
        <input type="number" name="daysLeft" class="form-control mb-3" min="1" value="7" required />

        <button class="btn btn-primary btn-lg w-100">🚀 Bắt đầu tư vấn</button>
    </form>
</div>

@section Scripts {
    <script>
        $(".js-kt-toggle").change(function () {
            let id = $(this).data("id");
            let da = $(this).is(":checked");

            $.post("/TuVan/CapNhatTrangThai",
                { maKT: id, daHieu: da },
                () => { });
        });
    </script>
}
