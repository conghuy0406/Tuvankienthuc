@model IEnumerable<Tuvankienthuc.Services.KienThucTuDanhGiaVm>

@{
    ViewData["Title"] = "Tự đánh giá kiến thức";
    int maMH = ViewBag.MaMH;
    string tenMonHoc = ViewBag.TenMonHoc;

    var groups = Model.GroupBy(m => m.KienThuc.ChuDe?.TenCD ?? "Khác");
}

<div class="container my-4">

    <h2 class="fw-bold text-primary">
        📘 @tenMonHoc – Tự đánh giá kiến thức
    </h2>

    <p class="text-muted mb-4">
        Hãy đánh dấu những kiến thức bạn <strong>đã nắm vững</strong>.
        Hệ thống sẽ dựa vào kết quả này để <strong>đề xuất lộ trình bổ sung kiến thức phù hợp</strong>.
    </p>

    @foreach (var g in groups)
    {
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-primary text-white fw-bold">
                @g.Key
            </div>

            <div class="card-body bg-light">
                @foreach (var item in g)
                {
                    var kt = item.KienThuc;

                    <div class="p-3 bg-white rounded shadow-sm mb-3">
                        <div class="d-flex justify-content-between align-items-start">

                            <div class="me-3">
                                <div class="fw-semibold">
                                    @kt.NoiDung
                                </div>

                                @if (!string.IsNullOrWhiteSpace(kt.CauHoiAI))
                                {
                                    <div class="small text-muted mt-1">
                                        🧠 Câu hỏi tự kiểm tra: <em>@kt.CauHoiAI</em>
                                    </div>
                                }
                            </div>

                            <div class="form-check mt-1">
                                <input type="checkbox"
                                       class="form-check-input js-kt-toggle"
                                       data-id="@kt.MaKT"
                                       @(item.TrangThai == 2 ? "checked" : "") />
                                <label class="form-check-label small">
                                    Đã hiểu
                                </label>
                            </div>

                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- FORM SUBMIT -->
    <form method="post" asp-action="TuVanRedirect" class="mt-4">

        <input type="hidden" name="maMH" value="@maMH" />

        <label class="fw-bold mb-1">
            🎯 Mục tiêu học tập
        </label>
        <select name="goal" class="form-select mb-3" required>
            <option value="">-- Chọn mục tiêu --</option>
            <option>Ôn để đạt yêu cầu môn học</option>
            <option>Ôn tập để đạt điểm cao</option>
            <option>Nắm vững và hiểu sâu kiến thức</option>
            <option>Hoàn thành bài tập / đồ án</option>
        </select>

        <label class="fw-bold mb-1">
            ⏱ Số ngày còn lại để ôn tập
        </label>
        <input type="number"
               name="daysLeft"
               class="form-control mb-4"
               min="1"
               value="7"
               required />

        <button class="btn btn-primary btn-lg w-100">
            🚀 Nhận tư vấn học tập
        </button>
    </form>
</div>

@section Scripts {
    <script>
        $(".js-kt-toggle").change(function () {
            let id = $(this).data("id");
            let da = $(this).is(":checked");

            $.post("/TuVan/CapNhatTrangThai",
                { maKT: id, daHieu: da },
                () => { });
        });
    </script>
}
