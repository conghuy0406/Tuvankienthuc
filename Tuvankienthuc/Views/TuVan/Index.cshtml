@model IEnumerable<Tuvankienthuc.Models.MonHoc>

@{
    ViewData["Title"] = "Chọn môn học cần tư vấn";
}

@section Styles {
    <style>
        .subject-card {
            border: 1px solid #e2e8f0;
            border-radius: 20px;
            transition: all 0.3s ease;
            background: white;
            overflow: hidden;
        }

            .subject-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 18px 35px rgba(15, 118, 110, 0.12);
                border-color: var(--primary);
            }

        .card-icon-wrapper {
            background: linear-gradient(135deg, rgba(15,118,110,.12), rgba(45,212,191,.12));
            height: 90px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--primary);
            font-size: 2.2rem;
        }

        .subject-title {
            font-weight: 700;
            color: #0f172a;
            min-height: 48px;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .lecturer-info {
            background: #f8fafc;
            padding: 8px 12px;
            border-radius: 10px;
            font-size: 0.85rem;
            color: #64748b;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .btn-consult {
            border-radius: 50px;
            font-weight: 600;
            background-color: var(--primary);
            border-color: var(--primary);
            padding: 10px 20px;
            transition: 0.3s;
        }

            .btn-consult:hover {
                background-color: #134E4A;
                border-color: #134E4A;
            }
    </style>
}

<div class="container my-5">

    <!-- HEADER -->
    <div class="text-center mb-5">
        <h6 class="text-uppercase text-primary fw-bold letter-spacing-1">
            Hệ thống tư vấn học tập thông minh
        </h6>
        <h2 class="fw-bold text-dark mb-3">
            Chọn môn học cần bổ sung kiến thức
        </h2>
        <p class="text-muted mb-0">
            Dựa trên kết quả tự đánh giá và mục tiêu học tập, hệ thống sẽ gợi ý
            <strong>những kiến thức cần học</strong> và <strong>cách ôn tập phù hợp</strong>.
        </p>
    </div>

    <!-- LIST SUBJECT -->
    <div class="row g-4">
        @foreach (var m in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="subject-card h-100 d-flex flex-column">

                    <div class="card-icon-wrapper">
                        <i class="bi bi-journal-text"></i>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h5 class="subject-title mb-3" title="@m.TenMH">
                            @m.TenMH
                        </h5>

                        <div class="mb-4">
                            @if (m.GiangVien != null)
                            {
                                <div class="lecturer-info">
                                    <i class="bi bi-person-video3 text-primary"></i>
                                    <span class="text-truncate">
                                        Giảng viên: @m.GiangVien.HoTen
                                    </span>
                                </div>
                            }
                            else
                            {
                                <div class="lecturer-info">
                                    <i class="bi bi-building text-muted"></i>
                                    <span>Bộ môn phụ trách</span>
                                </div>
                            }
                        </div>

                        <div class="mt-auto">
                            <a asp-action="TuDanhGia"
                               asp-route-maMH="@m.MaMH"
                               class="btn btn-consult w-100 text-white shadow-sm">
                                Tự đánh giá & tư vấn
                                <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
