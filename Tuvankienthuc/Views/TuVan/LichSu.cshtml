@model IEnumerable<Tuvankienthuc.Models.DeXuat>

@{
    ViewData["Title"] = "Lịch sử tư vấn học tập";
}

<div class="container my-4">

    <h2 class="fw-bold text-primary mb-3">
        📜 Lịch sử tư vấn học tập
    </h2>

    <p class="text-muted mb-4">
        Danh sách các lần hệ thống đã tư vấn lộ trình bổ sung kiến thức cho bạn.
    </p>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Bạn chưa có lần tư vấn nào.
        </div>
    }
    else
    {
        @foreach (var dx in Model)
        {
            <div class="card shadow-sm border-0 mb-3">
                <div class="card-body">

                    <div class="d-flex justify-content-between align-items-start">
                        <h5 class="fw-bold mb-1">
                            📘 @dx.MonHoc?.TenMH
                        </h5>

                        <span class="badge bg-secondary">
                            @dx.ThoiGian.ToString("dd/MM/yyyy")
                        </span>
                    </div>

                    <div class="small text-muted mt-1">
                        ⏰ @dx.ThoiGian.ToString("HH:mm")
                    </div>

                    <div class="mt-2">
                        🎯 <strong>Mục tiêu học tập:</strong>
                        <span>@dx.Goal</span>
                    </div>

                    <div class="mt-2 small text-muted">
                        🤖 Hệ thống tư vấn dựa trên kết quả tự đánh giá và thời gian còn lại.
                    </div>
                </div>
            </div>
        }
    }
</div>
