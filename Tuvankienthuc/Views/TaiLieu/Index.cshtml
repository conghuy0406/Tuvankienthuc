@model IEnumerable<Tuvankienthuc.Models.TaiLieu>
@{
    ViewData["Title"] = "Quản lý Tài liệu";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    body {
        background-color: #f8fafc;
        font-family: 'Inter', sans-serif;
    }

    .page-container {
        padding: 30px 15px;
    }

    /* Header Section */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

        .page-header h2 {
            font-weight: 700;
            color: #1e293b;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

    /* Card Wrapper */
    .content-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        border: 1px solid #e2e8f0;
        overflow: hidden;
    }

    /* Table Styling */
    .custom-table {
        margin-bottom: 0;
        width: 100%;
        border-collapse: collapse;
    }

        .custom-table thead {
            background-color: #f1f5f9;
        }

        .custom-table th {
            color: #64748b;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 12px;
            letter-spacing: 0.5px;
            padding: 16px 20px;
            border-bottom: 1px solid #e2e8f0;
        }

        .custom-table td {
            padding: 16px 20px;
            vertical-align: middle;
            color: #334155;
            border-bottom: 1px solid #f1f5f9;
            font-size: 14.5px;
        }

        .custom-table tbody tr:hover {
            background-color: #f8fafc;
            transition: background 0.2s;
        }

    /* Badge for Document Type */
    .type-badge {
        padding: 5px 12px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 500;
        background: #e0e7ff;
        color: #4338ca;
    }

    /* Action Buttons */
    .action-group {
        display: flex;
        gap: 8px;
    }

    .btn-action {
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        transition: all 0.2s;
        text-decoration: none;
    }

    .btn-details {
        background: #eff6ff;
        color: #2563eb;
    }

    .btn-edit {
        background: #fefce8;
        color: #a16207;
    }

    .btn-delete {
        background: #fef2f2;
        color: #dc2626;
    }

    .btn-action:hover {
        transform: translateY(-2px);
        filter: brightness(0.95);
    }

    /* Add Button */
    .btn-create {
        background: #4f46e5;
        color: white;
        padding: 10px 20px;
        border-radius: 10px;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: 0.3s;
        border: none;
        text-decoration: none;
    }

        .btn-create:hover {
            background: #4338ca;
            color: white;
            box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3);
        }
</style>

<div class="container page-container">
    <div class="page-header">
        <h2>
            <i class="bi bi-file-earmark-text" style="color: #4f46e5;"></i>
            Thư viện Tài liệu
        </h2>
        <a asp-action="Create" class="btn-create">
            <i class="bi bi-plus-lg"></i> Thêm tài liệu mới
        </a>
    </div>

    <div class="content-card">
        <div class="table-responsive">
            <table class="custom-table">
                <thead>
                    <tr>
                        <th>Tiêu đề tài liệu</th>
                        <th>Loại</th>
                        <th>Ngày cập nhật</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="font-weight: 500;">
                                @item.TieuDe
                            </td>
                            <td>
                                <span class="type-badge">@item.LoaiTL</span>
                            </td>
                            <td class="text-muted">
                                <i class="bi bi-calendar3 me-1"></i> @item.NgayThem.ToString("dd/MM/yyyy HH:mm")
                            </td>
                            <td>
                                <div class="action-group justify-content-center">
                                    <a asp-action="Details" asp-route-id="@item.MaTL" class="btn-action btn-details" title="Chi tiết">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.MaTL" class="btn-action btn-edit" title="Sửa">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MaTL" class="btn-action btn-delete" title="Xoá">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>