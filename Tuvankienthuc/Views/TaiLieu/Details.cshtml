@model Tuvankienthuc.Models.TaiLieu
@{
    ViewData["Title"] = "Chi tiết tài liệu";
    var chuDeNames = ViewBag.ChuDeNames as List<string> ?? new List<string>();
}
<div class="container" style="max-width:900px; margin-top:100px;">


    <div class="card border-0 shadow-sm">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">📄 Chi tiết tài liệu</h5>
        </div>

        <div class="card-body">

            <div class="row mb-3">
                <div class="col-md-3 fw-semibold text-muted">Tiêu đề</div>
                <div class="col-md-9 fw-bold">@Model.TieuDe</div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3 fw-semibold text-muted">Mô tả</div>
                <div class="col-md-9">
                    @if (!string.IsNullOrWhiteSpace(Model.MoTa))
                    {
                        <div class="border rounded p-2 bg-light">@Model.MoTa</div>
                    }
                    else
                    {
                        <span class="text-muted">Không có mô tả</span>
                    }
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3 fw-semibold text-muted">Đường dẫn</div>
                <div class="col-md-9">
                    @if (!string.IsNullOrWhiteSpace(Model.DuongDan))
                    {
                        <a href="@Model.DuongDan" target="_blank" class="text-decoration-none">
                            🔗 Mở tài liệu
                        </a>
                    }
                    else
                    {
                        <span class="text-muted">Chưa có đường dẫn</span>
                    }
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3 fw-semibold text-muted">Loại tài liệu</div>
                <div class="col-md-9">
                    <span class="badge bg-primary">@Model.LoaiTL</span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3 fw-semibold text-muted">Ngày thêm</div>
                <div class="col-md-9">
                    @Model.NgayThem.ToString("dd/MM/yyyy HH:mm")
                </div>
            </div>

            <div class="row">
                <div class="col-md-3 fw-semibold text-muted">Chủ đề</div>
                <div class="col-md-9">
                    @if (chuDeNames.Any())
                    {
                        @foreach (var cd in chuDeNames)
                        {
                            <span class="badge bg-secondary me-1 mb-1">@cd</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">Chưa gắn chủ đề</span>
                    }
                </div>
            </div>

        </div>

        <div class="card-footer bg-light d-flex justify-content-end gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary">
                ← Quay lại
            </a>
            <a asp-action="Edit" asp-route-id="@Model.MaTL" class="btn btn-warning">
                ✏️ Sửa
            </a>
        </div>
    </div>
</div>
