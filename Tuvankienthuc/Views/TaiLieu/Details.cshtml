@model Tuvankienthuc.Models.TaiLieu
@{
    ViewData["Title"] = "Chi tiết tài liệu";
    var chuDeNames = ViewBag.ChuDeNames as List<string> ?? new List<string>();
}

<h2>Chi tiết tài liệu</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Tiêu đề</dt>
            <dd class="col-sm-9">@Model.TieuDe</dd>

            <dt class="col-sm-3">Mô tả</dt>
            <dd class="col-sm-9">@Model.MoTa</dd>

            <dt class="col-sm-3">Đường dẫn</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrWhiteSpace(Model.DuongDan))
                {
                    <a href="@Model.DuongDan" target="_blank">@Model.DuongDan</a>
                }
            </dd>

            <dt class="col-sm-3">Loại tài liệu</dt>
            <dd class="col-sm-9">@Model.LoaiTL</dd>

            <dt class="col-sm-3">Ngày thêm</dt>
            <dd class="col-sm-9">@Model.NgayThem.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">Chủ đề</dt>
            <dd class="col-sm-9">
                @if (chuDeNames.Any())
                {
                    <ul>
                        @foreach (var cd in chuDeNames)
                        {
                            <li>@cd</li>
                        }
                    </ul>
                }
                else
                {
                    <span class="text-muted">Chưa gắn chủ đề</span>
                }
            </dd>
        </dl>
    </div>
</div>

<p class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.MaTL" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</p>
