@model Tuvankienthuc.Models.TaiLieu
@{
    ViewData["Title"] = "Xoá tài liệu";
    var chuDeNames = ViewBag.ChuDeNames as List<string> ?? new List<string>();
}
<div class="delete-bg">

    <div class="container pt-5 mt-3" style="max-width: 720px;">

        <div class="card border-0 shadow rounded-4">
            <div class="card-header bg-danger text-white py-2 rounded-top-4">
                <strong>⚠️ Xác nhận xoá tài liệu</strong>
            </div>

            <div class="card-body p-3">

                <div class="alert alert-warning small mb-3">
                    Bạn <strong>không thể hoàn tác</strong> sau khi xoá.
                    Hãy chắc chắn trước khi tiếp tục.
                </div>

                <!-- THÔNG TIN TÀI LIỆU -->
                <div class="border rounded-3 p-3 bg-light mb-3">
                    <h6 class="fw-bold mb-1">@Model.TieuDe</h6>

                    <p class="small text-muted mb-2">
                        @Model.MoTa
                    </p>

                    <div class="small mb-1">
                        <strong>Loại:</strong> @Model.LoaiTL
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.DuongDan))
                    {
                        <div class="small mb-1">
                            <strong>Đường dẫn:</strong>
                            <a href="@Model.DuongDan" target="_blank">@Model.DuongDan</a>
                        </div>
                    }

                    <div class="small">
                        <strong>Chủ đề:</strong>
                        @if (chuDeNames.Any())
                        {
                            @string.Join(", ", chuDeNames)
                        }
                        else
                        {
                            <span class="text-muted">Chưa gắn</span>
                        }
                    </div>
                </div>

                <!-- ACTION -->
                <form asp-action="Delete" class="d-flex justify-content-end gap-2">
                    <input type="hidden" asp-for="MaTL" />

                    <a asp-action="Index"
                       class="btn btn-outline-secondary btn-sm px-3">
                        ← Huỷ
                    </a>

                    <button type="submit"
                            class="btn btn-danger btn-sm px-4">
                        🗑️ Xoá vĩnh viễn
                    </button>
                </form>

            </div>
        </div>

    </div>
</div>
