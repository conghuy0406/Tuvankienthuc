@model Tuvankienthuc.ViewModels.TaiLieuUpsertVM
@{
    ViewData["Title"] = "Thêm tài liệu mới";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #f0f4f8;
        font-family: 'Inter', sans-serif;
    }

    .create-container {
        max-width: 850px;
        margin: 50px auto;
        animation: slideUp 0.5s ease;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .form-card {
        background: white;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.05);
        border: 1px solid #e2e8f0;
    }

    .header-title {
        font-weight: 700;
        color: #0f172a;
        margin-bottom: 5px;
    }

    .form-label {
        font-weight: 600;
        color: #334155;
        font-size: 0.9rem;
        margin-bottom: 8px;
    }

    .form-control {
        border-radius: 12px;
        border: 2px solid #edf2f7;
        padding: 12px 16px;
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: #10b981;
            box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.1);
        }

    /* Tinh chỉnh Select2 để khớp với giao diện */
    .select2-container--default .select2-selection--multiple {
        border: 2px solid #edf2f7 !important;
        border-radius: 12px !important;
        min-height: 50px;
        padding: 5px;
    }

    .select2-container--default.select2-container--focus .select2-selection--multiple {
        border-color: #10b981 !important;
    }

    .btn-save {
        background: #10b981;
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 12px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s;
    }

        .btn-save:hover {
            background: #059669;
            transform: translateY(-2px);
            box-shadow: 0 8px 15px rgba(16, 185, 129, 0.2);
        }

    .btn-back {
        background: #f1f5f9;
        color: #64748b;
        padding: 12px 25px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 500;
        transition: 0.2s;
    }

        .btn-back:hover {
            background: #e2e8f0;
            color: #1e293b;
        }

    .input-group-text {
        background: #f8fafc;
        border: 2px solid #edf2f7;
        border-right: none;
        border-radius: 12px 0 0 12px;
        color: #94a3b8;
    }

    .has-icon .form-control {
        border-left: none;
        border-radius: 0 12px 12px 0;
    }
</style>

<div class="create-container">
    <div class="text-center mb-4">
        <h2 class="header-title">Thêm tài liệu mới</h2>
        <p class="text-muted">Cung cấp tài nguyên học tập hữu ích cho hệ thống</p>
    </div>

    <div class="form-card">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3"></div>

            <div class="row">
                <div class="col-12 mb-4">
                    <label asp-for="TaiLieu.TieuDe" class="form-label">Tiêu đề tài liệu</label>
                    <div class="input-group has-icon">
                        <span class="input-group-text"><i class="bi bi-type-h1"></i></span>
                        <input asp-for="TaiLieu.TieuDe" class="form-control" placeholder="Ví dụ: Giáo trình Giải tích 1" />
                    </div>
                    <span asp-validation-for="TaiLieu.TieuDe" class="text-danger small"></span>
                </div>

                <div class="col-12 mb-4">
                    <label asp-for="TaiLieu.MoTa" class="form-label">Mô tả chi tiết</label>
                    <textarea asp-for="TaiLieu.MoTa" class="form-control" rows="3" placeholder="Tóm tắt nội dung tài liệu..."></textarea>
                    <span asp-validation-for="TaiLieu.MoTa" class="text-danger small"></span>
                </div>

                <div class="col-md-7 mb-4">
                    <label asp-for="TaiLieu.DuongDan" class="form-label">Liên kết (URL)</label>
                    <div class="input-group has-icon">
                        <span class="input-group-text"><i class="bi bi-link-45deg"></i></span>
                        <input asp-for="TaiLieu.DuongDan" class="form-control" placeholder="https://drive.google.com/..." />
                    </div>
                    <span asp-validation-for="TaiLieu.DuongDan" class="text-danger small"></span>
                </div>

                <div class="col-md-5 mb-4">
                    <label asp-for="TaiLieu.LoaiTL" class="form-label">Định dạng</label>
                    <input asp-for="TaiLieu.LoaiTL" class="form-control" placeholder="PDF, Video, DOCX..." />
                    <span asp-validation-for="TaiLieu.LoaiTL" class="text-danger small"></span>
                </div>

                <div class="col-12 mb-4">
                    <label class="form-label">Gắn thẻ chủ đề</label>
                    <select asp-for="SelectedMaCDs" asp-items="ViewBag.ChuDeList" multiple class="form-select select2-multiple"></select>
                    <span asp-validation-for="SelectedMaCDs" class="text-danger small"></span>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-3">
                <a asp-action="Index" class="btn-back">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
                <button type="submit" class="btn-save">
                    <i class="bi bi-cloud-arrow-up-fill"></i> Lưu tài liệu
                </button>
            </div>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<script>
    $(document).ready(function() {
        $('.select2-multiple').select2({
            placeholder: " Chọn một hoặc nhiều chủ đề liên quan",
            allowClear: true,
            width: '100%'
        });
    });
</script>