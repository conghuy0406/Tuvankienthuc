@model Tuvankienthuc.Models.ChuDe

@{
    ViewData["Title"] = "Chỉnh sửa Chủ đề";
}

<div class="container pt-5 mt-3" style="max-width: 850px;">

    <div class="card border-0 shadow-sm rounded-4">

        <!-- HEADER -->
        <div class="card-header bg-primary text-white py-2 rounded-top-4">
            <strong>@ViewData["Title"]</strong>
        </div>

        <!-- BODY -->
        <div class="card-body p-3">

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="MaCD" />

                <!-- TÊN CHỦ ĐỀ -->
                <div class="mb-3">
                    <label asp-for="TenCD" class="form-label fw-semibold small">
                        Tên chủ đề
                    </label>
                    <input asp-for="TenCD"
                           class="form-control form-control-sm"
                           placeholder="Nhập tên chủ đề" />
                    <span asp-validation-for="TenCD" class="text-danger small"></span>
                </div>

                <!-- MÔ TẢ -->
                <div class="mb-3">
                    <label asp-for="MoTa" class="form-label fw-semibold small">
                        Mô tả
                    </label>
                    <textarea asp-for="MoTa"
                              class="form-control form-control-sm"
                              rows="3"
                              placeholder="Mô tả ngắn cho chủ đề"></textarea>
                </div>

                <!-- KIẾN THỨC CƠ BẢN -->
                <div class="mb-3">
                    <div class="form-check">
                        <input asp-for="IsKienThucCoBan"
                               class="form-check-input"
                               type="checkbox" />
                        <label asp-for="IsKienThucCoBan"
                               class="form-check-label small fw-semibold">
                            Là kiến thức cơ bản
                        </label>
                    </div>
                </div>

                <!-- MÔN HỌC -->
                <div class="mb-4">
                    <label asp-for="MaMH" class="form-label fw-semibold small">
                        Môn học
                    </label>
                    <select asp-for="MaMH"
                            class="form-select form-select-sm"
                            asp-items="ViewBag.MaMH">
                    </select>
                </div>

                <!-- ACTION -->
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index"
                       class="btn btn-outline-secondary btn-sm px-3 rounded-pill">
                        Quay lại
                    </a>

                    <button type="submit"
                            class="btn btn-primary btn-sm px-4 rounded-pill">
                        Cập nhật
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
