@model Tuvankienthuc.Models.ChuDe

@{
    ViewData["Title"] = "Chi tiết Chủ đề";
}

<div class="container pt-5 mt-3" style="max-width: 850px;">

    <div class="card border-0 shadow-sm rounded-4">

        <!-- HEADER -->
        <div class="card-header bg-primary text-white py-2 rounded-top-4">
            <strong>@ViewData["Title"]</strong>
        </div>

        <!-- BODY -->
        <div class="card-body p-3">

            <div class="row mb-2">
                <div class="col-sm-4 text-muted small fw-semibold">
                    Tên chủ đề
                </div>
                <div class="col-sm-8 fw-semibold">
                    @Model.TenCD
                </div>
            </div>

            <hr class="my-2" />

            <div class="row mb-2">
                <div class="col-sm-4 text-muted small fw-semibold">
                    Môn học
                </div>
                <div class="col-sm-8">
                    @Model.MonHoc?.TenMH
                </div>
            </div>

            <hr class="my-2" />

            <div class="row mb-2">
                <div class="col-sm-4 text-muted small fw-semibold">
                    Mô tả
                </div>
                <div class="col-sm-8">
                    @Model.MoTa
                </div>
            </div>

            <hr class="my-2" />

            <div class="row mb-3">
                <div class="col-sm-4 text-muted small fw-semibold">
                    Kiến thức cơ bản
                </div>
                <div class="col-sm-8">
                    <span class="badge @(Model.IsKienThucCoBan ? "bg-success" : "bg-secondary")">
                        @(Model.IsKienThucCoBan ? "Có" : "Không")
                    </span>
                </div>
            </div>

            <!-- ACTION -->
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index"
                   class="btn btn-outline-secondary btn-sm px-3 rounded-pill">
                    Quay lại
                </a>

                <a asp-action="Edit"
                   asp-route-id="@Model.MaCD"
                   class="btn btn-warning btn-sm px-4 rounded-pill">
                    Sửa
                </a>
            </div>

        </div>
    </div>
</div>
