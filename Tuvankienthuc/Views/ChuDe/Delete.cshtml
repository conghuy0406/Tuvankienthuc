@model Tuvankienthuc.Models.ChuDe

@{
    ViewData["Title"] = "Xóa Chủ đề";
}

<div class="container pt-5 mt-3" style="max-width: 820px;">

    <div class="card border-0 shadow-sm rounded-4">

        <!-- HEADER -->
        <div class="card-header bg-danger text-white py-2 rounded-top-4">
            <strong>@ViewData["Title"]</strong>
        </div>

        <!-- BODY -->
        <div class="card-body p-3">

            <div class="alert alert-warning small mb-3">
                Bạn có chắc chắn muốn xóa chủ đề này?
                Hành động này <strong>không thể hoàn tác</strong>.
            </div>

            <div class="row mb-2">
                <div class="col-sm-4 text-muted small fw-semibold">
                    Tên chủ đề
                </div>
                <div class="col-sm-8 fw-semibold">
                    @Model.TenCD
                </div>
            </div>

            <hr class="my-2" />

            <div class="row mb-3">
                <div class="col-sm-4 text-muted small fw-semibold">
                    Môn học
                </div>
                <div class="col-sm-8">
                    @Model.MonHoc?.TenMH
                </div>
            </div>

            <!-- ACTION -->
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index"
                   class="btn btn-outline-secondary btn-sm px-3 rounded-pill">
                    Hủy
                </a>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="MaCD" />
                    <button type="submit"
                            class="btn btn-danger btn-sm px-4 rounded-pill">
                        Xóa
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>
