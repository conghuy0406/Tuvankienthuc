@model IEnumerable<Tuvankienthuc.Models.User>

<h2 class="fw-bold text-primary mb-4">Quản lý người dùng</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Thêm tài khoản</a>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Họ tên</th>
            <th>Email</th>
            <th>Role</th>
            <th>Trạng thái</th>
            <th>Salt</th>
            <th class="text-end"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Id</td>
                <td>@u.HoTen</td>
                <td>@u.Email</td>
                <td>@u.Role</td>
                <td class="text-break small">@u.Salt</td>
                <td>
                    @if (u.IsActive)
                    {
                        <span class="badge bg-success">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Khoá</span>
                    }
                </td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-warning btn-sm">Sửa</a>

                    <form asp-action="Delete" asp-route-id="@u.Id"
                          method="post" class="d-inline"
                          onsubmit="return confirm('Bạn chắc chắn muốn xoá mềm tài khoản này?');">
                        <button class="btn btn-danger btn-sm">Xoá</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
