@{
    ViewData["Title"] = "Trang chủ - 2PIG Learning";
}

@section Styles {
    <style>
        /* ================== PAGE SPECIFIC STYLES ================== */

        /* 1. Hero Section tweaks */
        .hero-section {
            background: linear-gradient(135deg, #0F766E 0%, #2dd4bf 100%); /* Teal Gradient */
            border-radius: 0 0 50px 50px; /* Bo tròn góc dưới */
            padding-top: 130px; /* Bù khoảng trống cho Navbar */
            padding-bottom: 80px;
            margin-bottom: 50px;
            position: relative;
        }

        .custom-form .input-group {
            background: white;
            border-radius: 50px;
            padding: 5px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        }

        .custom-form input {
            border: none;
            box-shadow: none !important;
            padding-left: 15px;
            font-size: 16px;
        }

        .custom-form button {
            background: var(--primary);
            color: white;
            border-radius: 50px;
            width: auto;
            padding: 0 30px;
            font-weight: 600;
            transition: 0.3s;
        }

            .custom-form button:hover {
                background: var(--text-dark);
            }

        /* 2. Custom Cards */
        .custom-block {
            border: 1px solid #eef2f6;
            border-radius: 20px;
            transition: all 0.3s ease;
            overflow: hidden;
        }

            .custom-block:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 30px rgba(15, 118, 110, 0.1) !important; /* Teal shadow */
                border-color: var(--primary-light);
            }

        .badge {
            font-weight: 500;
            padding: 8px 12px;
        }

        /* 3. Nav Tabs styling */
        .nav-tabs {
            border-bottom: none;
            justify-content: center;
            margin-bottom: 40px;
            gap: 10px;
        }

            .nav-tabs .nav-link {
                border: none;
                background: #f1f5f9;
                color: var(--text-muted);
                border-radius: 30px;
                padding: 10px 25px;
                font-weight: 600;
                transition: 0.3s;
            }

                .nav-tabs .nav-link:hover {
                    background: #e2e8f0;
                    color: var(--primary);
                }

                .nav-tabs .nav-link.active {
                    background: var(--primary);
                    color: white !important;
                    box-shadow: 0 5px 15px rgba(15, 118, 110, 0.3);
                }

        /* 4. Timeline Section */
        .timeline-section {
            background-color: #111827; /* Dark slate */
            background-image: none; /* Bỏ ảnh nền cũ nếu có */
        }

        /* 5. Custom Buttons overrides */
        .custom-btn {
            background: var(--primary);
            border-color: var(--primary);
        }

            .custom-btn:hover {
                background: var(--text-dark);
                border-color: var(--text-dark);
            }
    </style>
}

